<h1>Listing posts</h1>

<table>
  <tr>
    <th>Facebook</th>
    <th>From name</th>
    <th>From</th>
    <th>Message</th>
    <th>Created time</th>
    <th>Likes</th>
    <th>User</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.facebook_id %></td>
    <td><%= post.from_name %></td>
    <td><%= post.from_id %></td>
    <td><%= post.message %></td>
    <td><%= post.created_time %></td>
    <td><%= post.likes %></td>
    <td><%= post.user_id %></td>
    <td><%= post.link %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

