<ul>
  <% @posts_with_videos.each do |post| %>
    <li>
      <p><%= post["from"]["name"] %> said, "<%= link_to post["message"], post["link"], :target => '_blank' %>" <%= time_ago_in_words post["created_time"] %> ago.</p>
      <% if post["comments"] && post["comments"]["data"] %>
        <ul>
          <% post["comments"]["data"].each do |comment| %>
            <li>
              <p><%= comment["from"]["name"] %> said, "<%= comment["message"] %>" <%= time_ago_in_words comment["created_time"] %> ago.</p>
            </li>
          <% end %>
        </ul>
      <% end %>
    </li>
  <% end %>
</ul>